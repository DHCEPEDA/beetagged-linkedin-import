# BeeTagged Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/beetagged?retryWrites=true&w=majority

# OpenAI API key for AI-powered search
OPENAI_API_KEY=sk-your-openai-api-key-here

# Production environment
NODE_ENV=production

# Server port (Heroku will set this automatically)
PORT=5000

# Optional: Facebook API credentials
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret