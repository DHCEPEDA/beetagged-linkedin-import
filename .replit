modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick", "unzip", "openjdk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UpdateHerokuBuild"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ViteDev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildSquarespaceBundle"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildDevelopment"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RebuildSquarespaceBundle"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ViteBuildDev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildDevScript"

[[workflows.workflow]]
name = "UpdateHerokuBuild"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo '{\"scripts\":{\"start\":\"node index.js\",\"build\":\"npx webpack --config webpack.production.config.js\",\"heroku-postbuild\":\"npm run build\"}}' > temp-scripts.json && cat temp-scripts.json"

[[workflows.workflow]]
name = "ViteDev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite dev --host 0.0.0.0 --port 3000"
waitForPort = 3000

[[workflows.workflow]]
name = "BuildSquarespaceBundle"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --config webpack.squarespace.config.js"

[[workflows.workflow]]
name = "BuildDevelopment"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite build --mode development"

[[workflows.workflow]]
name = "RebuildSquarespaceBundle"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --config webpack.squarespace.config.js"

[[workflows.workflow]]
name = "ViteBuildDev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite build --mode development"

[[workflows.workflow]]
name = "BuildDevScript"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite build --mode development"

[deployment]
run = ["sh", "-c", "node index.js"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
