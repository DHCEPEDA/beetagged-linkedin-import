modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick", "unzip", "openjdk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ViteDev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildSquarespaceBundle"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RebuildSquarespaceBundle"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinalRebuildSquarespaceBundle"

[[workflows.workflow]]
name = "ViteDev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite dev --host 0.0.0.0 --port 3000"
waitForPort = 3000

[[workflows.workflow]]
name = "BuildSquarespaceBundle"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --config webpack.squarespace.config.js"

[[workflows.workflow]]
name = "RebuildSquarespaceBundle"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --config webpack.squarespace.config.js"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=5000 node index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "FinalRebuildSquarespaceBundle"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --config webpack.squarespace.config.js"

[deployment]
run = ["sh", "-c", "node index.js"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 4173
externalPort = 3002

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 32963
externalPort = 5173

[[ports]]
localPort = 36191
externalPort = 3003

[[ports]]
localPort = 37747
externalPort = 4200

[agent]
expertMode = true
