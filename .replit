modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick", "unzip", "openjdk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildClient"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BeeTaggedServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UpdateHerokuBuild"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildDev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildDevScript"

[[workflows.workflow]]
name = "BuildClient"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --mode production"

[[workflows.workflow]]
name = "BeeTaggedServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "UpdateHerokuBuild"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo '{\"scripts\":{\"start\":\"node index.js\",\"build\":\"npx webpack --config webpack.production.config.js\",\"heroku-postbuild\":\"npm run build\"}}' > temp-scripts.json && cat temp-scripts.json"

[[workflows.workflow]]
name = "BuildDev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite build --mode development"

[[workflows.workflow]]
name = "BuildDevScript"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node build-dev.js"

[deployment]
run = ["sh", "-c", "node index.js"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
