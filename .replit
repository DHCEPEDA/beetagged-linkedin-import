modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick", "unzip", "openjdk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BeeTaggedServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UpdateHerokuBuild"

[[workflows.workflow]]
name = "BeeTaggedServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 node server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "UpdateHerokuBuild"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo '{\"scripts\":{\"start\":\"node index.js\",\"build\":\"npx webpack --config webpack.production.config.js\",\"heroku-postbuild\":\"npm run build\"}}' > temp-scripts.json && cat temp-scripts.json"

[deployment]
run = ["sh", "-c", "node index.js"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
