modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["unzip", "imagemagick"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildClient"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleServer"

[[workflows.workflow]]
name = "BuildClient"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --mode production"

[[workflows.workflow]]
name = "SimpleServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node server-simple.js"
